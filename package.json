{
  "name": "api",
  "version": "1.0.0",
  "description": "a seed project for creating http service using express written in typescript",
  "main": "app.js",
  "scripts": {
    "test": "jest --forceExit",
    "start": "npm run dev",
    "prod": "cross-env NODE_ENV=production webpack --watch",
    "dev": "webpack --watch",
    "build": "npm run build:dev",
    "build:dev": "webpack --config ./webpack.config.js --progress --profile --color --display-error-details --display-cached && npm run copy-files",
    "build:prod": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --profile --color --display-error-details --display-cached --bail && npm run copy-files",
    "copy-files": "node copyFiles.js",
    "clean": "npm cache clear && rimraf -- dist"
  },
  "keywords": [],
  "author": "Helmuth Saatkamp",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "config": "^1.30.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "del": "^3.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-status-monitor": "^1.0.1",
    "helmet": "^3.12.0",
    "joi": "^13.2.0",
    "lodash": "^4.17.10",
    "lokijs": "^1.5.3",
    "method-override": "^2.3.10",
    "mongoose": "^5.0.16",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "rxjs": "^6.0.0",
    "wicket": "^1.3.3",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@reactivex/rxjs": "^6.0.0",
    "@types/body-parser": "1.17.0",
    "@types/compression": "^0.0.36",
    "@types/config": "^0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^0.0.30",
    "@types/del": "^3.0.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/helmet": "^0.0.37",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/lokijs": "^1.5.2",
    "@types/method-override": "^0.0.31",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.6",
    "@types/node": "^8.10.10",
    "@types/supertest": "^2.0.4",
    "@types/webpack": "^4.1.4",
    "@types/winston": "^2.3.9",
    "cross-env": "^5.1.4",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3",
    "nodemon-webpack-plugin": "^4.0.3",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.4",
    "ts-loader": "^4.2.0",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.spec.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
