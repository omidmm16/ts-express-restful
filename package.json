{
  "name": "api",
  "version": "1.0.0",
  "description": "a seed project for creating http service using express written in typescript",
  "main": "app.js",
  "scripts": {
    "test": "jest --forceExit",
    "start": "npm run server:dev",
    "server": "npm run server:dev",
    "dev": "nodemon --inspect --exec ts-node src/index.ts",
    "prod": "cross-env NODE_ENV=production nodemon --exec ts-node src/index.ts",
    "build": "npm run build:dev",
    "build:dev": "webpack --config ./webpack.config.js --progress --profile --color --display-error-details --display-cached && npm run copy-files",
    "build:prod": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --profile --color --display-error-details --display-cached --bail && npm run copy-files",
    "copy-files": "node copyFiles.js",
    "clean": "npm cache clear && rimraf -- dist"
  },
  "keywords": [],
  "author": "Helmuth Saatkamp",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "del": "^3.0.0",
    "errorhandler": "^1.5.0",
    "express-session": "^1.15.6",
    "express": "^4.16.1",
    "lodash": "^4.17.4",
    "lokijs": "^1.5.0",
    "method-override": "^2.3.10",
    "morgan": "^1.9.0",
    "mssql": "^4.1.0",
    "multer": "^1.3.0",
    "rxjs": "^5.4.3",
    "wicket": "^1.3.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@reactivex/rxjs": "^5.4.3",
    "@types/bluebird": "^3.5.14",
    "@types/body-parser": "1.16.5",
    "@types/compression": "0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/del": "^3.0.0",
    "@types/errorhandler": "0.0.31",
    "@types/express-session": "1.15.3",
    "@types/express": "^4.0.37",
    "@types/lodash": "^4.14.77",
    "@types/lokijs": "^1.2.30",
    "@types/method-override": "0.0.30",
    "@types/morgan": "^1.7.33",
    "@types/mssql": "^4.0.6",
    "@types/multer": "^1.3.3",
    "@types/node": "^8.0.32",
    "@types/supertest": "^2.0.3",
    "@types/webpack": "^3.0.13",
    "@types/winston": "^2.3.6",
    "awesome-typescript-loader": "^3.2.3",
    "cross-env": "^5.0.5",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "shelljs": "^0.7.8",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.1",
    "ts-node": "^3.3.0",
    "tslint-loader": "^3.5.3",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3",
    "webpack": "^3.6.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*.spec.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
